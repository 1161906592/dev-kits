<% fields.filter((d) => d.key !== 'id' && d.type !== 'boolean').filter((d) => /\d+-\S+/.test(d.meta)).forEach((item) => { %>
  // <%- item.title %>选项
  const <%- item.key %>Options = [
    <% item.meta.match(/\d+-\S+/g).map(d => d.split(/-+/)).forEach(([value, label]) => { %>
    { label: '<%- label %>', value: <%- value %> },
    <% }) %>
  ]
<% }) %>

<% fields.filter((d) => d.key !== 'id' && d.type !== 'boolean').filter((d) => d.meta?.includes('remote')).forEach((item) => { %>
  // 获取<%- item.title %>选项
  const { dataRef: <%- item.key %>OptionsRef } = useRequestLogic(
    async () => {
      const res = await xxxOptions({})

      return res.content?.map(item => ({...item, label: item.xxx, value: item.xxx})) || []
    },
    {
      ready: () => props.show,
    }
  )
<% }) %>

<% if(fields.filter((d) => d.key !== 'id').some(d => d.type === "number" && !d.meta?.includes('remote'))) { %>
  // 数字输入限制
  const allowNumber = allowInputNumber()
<% } %>