{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "lib",
  },
  "include": ["src", "dep-types"]
}